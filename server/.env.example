# Database
DATABASE_URL=postgresql://postgres:vibebox_dev_password_2025@localhost:5432/vibebox

# Logto
LOGTO_ENDPOINT=http://localhost:3001
LOGTO_APP_ID=your_app_id_here
LOGTO_JWKS_URI=http://localhost:3001/oidc/jwks

# NextAuth Secret
NEXTAUTH_SECRET=your-random-secret-here-change-in-production

# China Mobile Cloud Provider
# Get credentials from: https://ecloud.10086.cn -> Account -> API Key Management
CHINAMOBILE_ACCESS_KEY_ID=your_access_key_here
CHINAMOBILE_ACCESS_KEY_SECRET=your_secret_key_here

# Pool IDs (resource pools/regions)
# Hangzhou (default): CIDC-RP-35
# Suzhou: CIDC-RP-25
CHINAMOBILE_POOL_ID=CIDC-RP-35

# Zone IDs (availability zones)
# Hangzhou: cn-hangzhou-1a
# Suzhou: cn-jiangsu-1a
CHINAMOBILE_ZONE_ID=cn-hangzhou-1a

# Network ID (IMPORTANT: get from existing instance or VPC console)
# This is NOT VPC ID or Subnet ID - it's a special network resource ID
# Find it: Console -> ECS -> Instances -> Click instance -> Check portDetail.networkId
CHINAMOBILE_NETWORK_ID=your_network_id_here
